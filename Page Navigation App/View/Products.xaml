<UserControl x:Class="Page_Navigation_App.View.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Page_Navigation_App.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:ProductVM />
    </UserControl.DataContext>
    
    <Grid Margin="15">
        <TextBox x:Name="TextBox"
            HorizontalAlignment="Left"
            Margin="0,10,0,0" 
            TextWrapping="Wrap"
            Text=""
            VerticalAlignment="Top"
            Foreground="White"
            Height="293" 
            Width="582" Background="#FF232323" FontSize="23"/>
        <Button Content="Ask AI"
            x:Name="aisend"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="77"
            Width="328"
            Background="#FF312D2D"
            Foreground="White"
            FontFamily="Cascadia Code ExtraLight"
            Click="aisend_Click" Margin="0,308,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10" 
                        Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Copy"
            x:Name="copy"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="77"
            Width="249"
            Background="#FF312D2D"
            Foreground="White"
            FontFamily="Cascadia Code ExtraLight"
            Click="copy_Click" Margin="333,308,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10" 
                        Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
