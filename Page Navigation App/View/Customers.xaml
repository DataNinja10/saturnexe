<UserControl x:Class="Page_Navigation_App.View.Customers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Page_Navigation_App.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:CustomerVM />
    </UserControl.DataContext>
    
    <Grid Margin="15">
        <TextBox HorizontalAlignment="Left" 
            Margin="0,10,0,0" 
            TextWrapping="Wrap" 
            Text="-- Hey, do you mind joining my Discord Server? If yes then https://discord.gg/BF4VjtyAgP" 
            VerticalAlignment="Top" 
            Width="622" 
            Height="288" 
            Background="#FF2B2727" 
            Foreground="White"
            x:Name="editor"/>
        <Button Content="Inject"
            x:Name="Inject"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="44"
            Width="126"
            Background="#FF312D2D"
            Foreground="White"
            FontFamily="Cascadia Code ExtraLight"
            Click="Inject_Click" Margin="0,306,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10" 
                        Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Execute"
            x:Name="Execute"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="44"
            Width="126"
            Background="#FF312D2D"
            Foreground="White"
            FontFamily="Cascadia Code ExtraLight"
            Click="Execute_Click" Margin="148,306,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10" 
                        Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Clear"
            x:Name="Clear"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="44"
            Width="126"
            Background="#FF312D2D"
            Foreground="White"
            FontFamily="Cascadia Code ExtraLight"
            Click="Clear_Click" Margin="296,306,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10" 
                        Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Open"
            x:Name="Open"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="44"
            Width="126"
            Background="#FF312D2D"
            Foreground="White"
            FontFamily="Cascadia Code ExtraLight"
            Click="Open_Click" Margin="440,306,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10" 
                        Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Save"
            x:Name="Save"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="44"
            Width="126"
            Background="#FF312D2D"
            Foreground="White"
            FontFamily="Cascadia Code ExtraLight"
            Click="Save_Click" Margin="0,355,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10" 
                        Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
